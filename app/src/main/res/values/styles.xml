<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="likeButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/like_button</item>
        <item name="android:minWidth">@dimen/icon_button_size</item>
        <item name="android:minHeight">@dimen/icon_button_size</item>
    </style>

    <style name="defaultButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:minWidth">@dimen/icon_button_size</item>
        <item name="minHeight">@dimen/icon_button_size</item>
    </style>

    <style name="toggleButtonLikeTheme" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingStart">4dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">#1E000000</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="backgroundTint">#00000000</item>
        <item name="iconTint">@color/like_button_image</item>
        <item name="iconPadding">4dp</item>
        <item name="rippleColor">@color/black</item>
        <item name="textStartPadding">0dp</item>
    </style>

    <style name="newerTheme" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/newer_button</item>
    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
</resources>